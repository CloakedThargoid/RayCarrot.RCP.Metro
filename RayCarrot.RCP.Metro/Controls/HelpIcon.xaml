<UserControl x:Class="RayCarrot.RCP.Metro.HelpIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Margin="10 0 0 0">
    <iconPacks:PackIconMaterial x:Name="HelpIconRoot"
                                Kind="HelpCircleOutline"
                                VerticalAlignment="Center">
        <iconPacks:PackIconMaterial.ToolTip>
            <TextBlock Text="{Binding Path=Text}" MaxWidth="400" TextWrapping="WrapWithOverflow" />
        </iconPacks:PackIconMaterial.ToolTip>
    </iconPacks:PackIconMaterial>
</UserControl>