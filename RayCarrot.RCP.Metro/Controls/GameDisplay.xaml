<UserControl x:Class="RayCarrot.RCP.Metro.GameDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             IsTabStop="False"
             d:DataContext="{x:Static local:DesignTimeVM.GameDisplayViewModel}">
    <StackPanel>
        
        <!-- Image -->

        <Image Source="{Binding Path=IconSource, Mode=OneTime}"
               Height="128"/>

        <!-- Title -->

        <TextBlock Text="{Binding Path=DisplayName, Mode=OneTime}"
                   HorizontalAlignment="Center"
                   Margin="0 10"/>

        <!-- Actions -->

        <local:OverflowButton OverflowItemSource="{Binding Path=LaunchActions, Mode=OneTime}"
                              MainCommand="{Binding Path=MainAction.Command, Mode=OneTime}"
                              MainContent="{Binding Path=MainAction.Header}"
                              MainIconKind="{Binding Path=MainAction.IconKind}"/>

    </StackPanel>
</UserControl>