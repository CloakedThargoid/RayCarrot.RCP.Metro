<rwpf:VMUserControl x:Class="RayCarrot.RCP.Metro.EducationalDosOptions"
                    x:TypeArguments="local:EducationalDosOptionsViewModel"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                    xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:dd="urn:gong-wpf-dragdrop"
                    ResxExtension.DefaultResxName="{x:Static local:AppLanguages.ResourcePath}"
                    mc:Ignorable="d"
                    d:DataContext="{d:DesignInstance local:EducationalDosOptionsViewModel}">
    <StackPanel>
        <i:Interaction.Behaviors>
            <rwpf:UnifiedMarginBehavior Margin="{StaticResource DefaultVerticalStackMargin}" />
        </i:Interaction.Behaviors>

        <!-- TODO: Localize -->
        <StackPanel Orientation="Horizontal">

            <TextBlock Style="{StaticResource HeaderTextBlock}"
                       Text="Educational Games" />

            <local:InfoIcon Text="Multiple educational games can be added to launch, or the same game with different launch modes. The first game in the list is always the default one. The list can be reordered by dragging/dropping the items." />

        </StackPanel>

        <ItemsControl ItemsSource="{Binding Path=Games, Mode=OneTime}"
                      Grid.IsSharedSizeScope="True"
                      dd:DragDrop.IsDragSource="True"
                      dd:DragDrop.IsDropTarget="True">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0 5">
                        <Grid.ColumnDefinitions>
                            
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="A" />

                            <ColumnDefinition Width="*"
                                              SharedSizeGroup="B"
                                              MinWidth="150"/>

                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="C" />

                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="D" />

                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="../../../Img/GameIcons/EducationalDos.png"
                               Height="32" Width="32"
                               Margin="0 0 8 0"/>

                        <!-- TODO: Doesn't wrap -->
                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   Text="{Binding Path=Name}" />

                        <!-- TODO: Localize -->
                        <Button Grid.Column="2"
                                ToolTip="Edit"
                                Style="{StaticResource FlatButton}"
                                Command="{Binding Path=EditGameCommand}"
                                VerticalAlignment="Center" 
                                Margin="15 0 10 0">
                            <iconPacks:PackIconMaterial Background="Transparent"
                                                        Kind="Pencil" 
                                                        Width="16"
                                                        Height="16"/>
                        </Button>

                        <!-- TODO: Localize -->
                        <Button Grid.Column="3"
                                ToolTip="Remove"
                                Style="{StaticResource FlatButton}"
                                Command="{Binding Path=RemoveGameCommand}"
                                VerticalAlignment="Center" 
                                Margin="15 0 10 0">
                            <iconPacks:PackIconMaterial Background="Transparent"
                                                        Kind="Delete" 
                                                        Width="16"
                                                        Height="16"/>
                        </Button>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <!-- TODO: Localize -->
        <Button ToolTip="Add new game"
                Style="{StaticResource FlatButton}"
                HorizontalAlignment="Left"
                Command="{Binding Path=AddGameCommand}">
            <iconPacks:PackIconMaterial Background="Transparent"
                                        Kind="PlusCircleOutline" 
                                        Width="16"
                                        Height="16"/>
        </Button>

    </StackPanel>
</rwpf:VMUserControl>