<rwpf:VMUserControl x:Class="RayCarrot.RCP.Metro.Rayman3Utilities"
                    x:TypeArguments="local:Rayman3UtilitiesViewModel"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    ResxExtension.DefaultResxName="{x:Static local:AppLanguages.ResourcePath}"
                    IsTabStop="False"
                    mc:Ignorable="d" 
                    d:DesignHeight="450" d:DesignWidth="800"
                    d:DataContext="{d:DesignInstance local:Rayman3UtilitiesViewModel}">
    <ScrollViewer x:Name="scrollViewer"
                  Padding="5">
        <StackPanel>
            <i:Interaction.Behaviors>
                <rwpf:UnifiedMarginBehavior Margin="0 8" />
            </i:Interaction.Behaviors>

            <StackPanel Orientation="Horizontal">

                <TextBlock Style="{StaticResource HeaderTextBlock}"
                           Text="{Resx R3U_DirectPlayHeader}" />

                <local:InfoIcon Text="{Resx R3U_DirectPlayInfo}" />

            </StackPanel>

            <Grid>

                <metro:ProgressRing Visibility="{Binding Path=IsLoadingDirectPlay, Converter={rwpf:BooleanToVisibilityConverter}}" />

                <metro:ToggleSwitch IsChecked="{Binding Path=IsDirectPlayEnabled}"
                                    IsEnabled="{Binding Path=IsLoadingDirectPlay, Converter={rwpf:InvertedBooleanConverter}}"
                                    Visibility="{Binding Path=CanModifyDirectPlay, Converter={rwpf:BooleanToVisibilityConverter}}"
                                    HorizontalAlignment="Left"
                                    OnLabel="{Resx R3U_DirectPlayEnabled}"
                                    OffLabel="{Resx R3U_DirectPlayDisabled}" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Visibility="{Binding Path=CanModifyDirectPlay, Converter={rwpf:InvertedBooleanToVisibilityConverter}}">

                    <iconPacks:PackIconMaterial Kind="Security"
                                                Margin="0 0 10 0"/>

                    <TextBlock Foreground="Red"
                               Text="{Resx R3U_DirectPlayErrorInfo}" 
                               TextWrapping="Wrap"/>

                </StackPanel>

            </Grid>

        </StackPanel>
    </ScrollViewer>
</rwpf:VMUserControl>