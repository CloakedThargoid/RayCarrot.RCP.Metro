<rwpf:VMUserControl x:Class="RayCarrot.RCP.Metro.RaymanLegendsUtilities"
                    x:TypeArguments="local:RaymanLegendsUtilitiesViewModel"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
                    ResxExtension.DefaultResxName="{x:Static local:AppLanguages.ResourcePath}"
                    IsTabStop="False"
                    mc:Ignorable="d" 
                    d:DesignHeight="450" d:DesignWidth="800"
                    d:DataContext="{d:DesignInstance local:RaymanLegendsUtilitiesViewModel}">
    <ScrollViewer x:Name="scrollViewer"
                  Padding="5">
        <StackPanel>
            <i:Interaction.Behaviors>
                <rwpf:UnifiedMarginBehavior Margin="0 8" />
            </i:Interaction.Behaviors>

            <StackPanel Orientation="Horizontal">

                <TextBlock Style="{StaticResource HeaderTextBlock}"
                           Text="{Resx RLU_UbiRayHeader}" />

                <local:InfoIcon Text="{Resx RLU_UbiRayInfo}" />

                <local:InfoIcon IconKind="InformationOutline"
                                Foreground="Red"
                                Text="{Resx RLU_UbiRayWarning}" />

            </StackPanel>

            <ListBox ItemsSource="{Binding Path=AvailableSaveFiles, Mode=OneTime}"
                     SelectedItem="{Binding Path=SelectedPath}"
                     DisplayMemberPath="Name"
                     HorizontalAlignment="Left"/>

            <Button Content="{Resx RLU_Apply}"
                    HorizontalAlignment="Left" 
                    Command="{Binding Path=ApplyUbiRayCommand}"/>

        </StackPanel>
    </ScrollViewer>
</rwpf:VMUserControl>