<UserControl x:Class="RayCarrot.RCP.Metro.PointerPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Orientation="Horizontal">
        <Border Width="250" Background="{StaticResource AccentColorBrush}" CornerRadius="5">
            <Grid Margin="10">
                <TextBlock Grid.Row="0"
                           Text="Press this button to switch to the game utilities"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"/>

            </Grid>
        </Border>
        <Polygon VerticalAlignment="Center" Points="0,0 30,20, 0,40" StrokeThickness="0" Fill="{StaticResource AccentColorBrush}" />
    </StackPanel>
</UserControl>