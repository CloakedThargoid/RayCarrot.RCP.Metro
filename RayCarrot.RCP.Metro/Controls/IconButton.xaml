<Button x:Class="RayCarrot.RCP.Metro.IconButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="clr-namespace:RayCarrot.RCP.Metro"
        mc:Ignorable="d"
        Width="48"
        Height="48"
        Style="{StaticResource MetroCircleButtonStyle}">

    <iconPacks:PackIconMaterial x:Name="PackIconMaterial"
                                Kind="{Binding Path=IconKind}"
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center" d:DataContext="{d:DesignInstance metro:IconButton}" />

</Button>