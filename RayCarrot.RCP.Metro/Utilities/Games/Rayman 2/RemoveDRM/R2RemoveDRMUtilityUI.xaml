<UserControl x:Class="RayCarrot.RCP.Metro.R2RemoveDRMUtilityUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             ResxExtension.DefaultResxName="{StaticResource ResourcePath}"
             mc:Ignorable="d"
             d:DesignWidth="550" d:DataContext="{d:DesignInstance local:R2RemoveDRMUtilityViewModel}">
    <local:LoaderContentControl IsLoading="{Binding Path=IsLoading}">

        <StackPanel Orientation="Horizontal">
            <i:Interaction.Behaviors>
                <rwpf:UnifiedMarginBehavior Margin="{StaticResource DefaultHorizontalStackMargin}" />
            </i:Interaction.Behaviors>

            <Button Content="{Resx Utility_Apply}"
                    HorizontalAlignment="Left"
                    Command="{Binding Path=ApplyPatchCommand}"/>

            <Button Content="{Resx Utility_Revert}"
                    HorizontalAlignment="Left"
                    Command="{Binding Path=RevertPatchCommand}"
                    Visibility="{Binding Path=HasBeenApplied, Converter={rwpf:BooleanToVisibilityConverter}}"/>

        </StackPanel>

    </local:LoaderContentControl>

</UserControl>