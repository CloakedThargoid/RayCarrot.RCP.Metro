<UserControl x:Class="RayCarrot.RCP.Metro.R2CNTExplorerUtilityUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             ResxExtension.DefaultResxName="{x:Static local:AppViewModel.ResourcePath}"
             mc:Ignorable="d"
             d:DesignWidth="550" d:DataContext="{d:DesignInstance local:R2CNTExplorerUtilityViewModel}">
    
    <Button Content="{Resx ArchiveExplorer_Open}"
            HorizontalAlignment="Left"
            Command="{Binding Path=OpenCommand}"/>

</UserControl>