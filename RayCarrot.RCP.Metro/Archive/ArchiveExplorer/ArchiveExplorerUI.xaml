<UserControl x:Class="RayCarrot.RCP.Metro.ArchiveExplorerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:controlzex="urn:controlzex"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:ArchiveExplorerDialogViewModel}"
             Language="{UICulture}"
             ResxExtension.DefaultResxName="{StaticResource ResourcePath}"
             MinHeight="400"
             MinWidth="600">
    <local:LoaderContentControl HorizontalLoadingIconAlignment="Center"
                                VerticalLoadingIconAlignment="Center"
                                VerticalContentAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                IsLoading="{Binding Path=IsLoading}">
        <Grid Margin="10"
              IsEnabled="{Binding Path=IsLoading, Converter={rwpf:InvertedBooleanConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Directory Tree View -->

            <TreeView x:Name="DirTreeView"
                      Grid.Column="0"
                      Grid.Row="0"
                      ItemsSource="{Binding Path=Archives, Mode=OneTime}"
                      PreviewMouseRightButtonDown="DirTreeView_OnPreviewMouseRightButtonDown"
                      SelectedItemChanged="DirTreeView_OnSelectedItemChangedAsync"
                      MinWidth="80">

                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu ResxExtension.DefaultResxName="{StaticResource ResourcePath}"
                                             d:DataContext="{d:DesignInstance local:ArchiveDirectoryViewModel}">

                                    <local:MenuItemIcon Header="{Resx Archive_Export}"
                                                        Command="{Binding Path=ExportCommand}"
                                                        IconKind="Export" />

                                    <local:MenuItemIcon Header="{Resx Archive_Import}"
                                                        Command="{Binding Path=ImportCommand}"
                                                        IconKind="Import" />

                                    <Separator />

                                    <local:MenuItemIcon Header="{Resx Archive_Extract}"
                                                        Command="{Binding Path=ExtractCommand}"
                                                        IconKind="ApplicationExport" />

                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="IsSelected" Value="{Binding Path=IsSelected}" />
                        <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded}" />
                        <Setter Property="ToolTip" Value="{Binding Path=DisplayDescription}" />
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Mode=OneTime}">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <iconPacks:PackIconMaterial Grid.Column="0"
                                                            Kind="FolderOutline" />

                                <TextBlock Grid.Column="2"
                                           Text="{Binding Path=DisplayName, Mode=OneTime}"
                                           VerticalAlignment="Center"
                                           Margin="0 0 10 0" />

                            </Grid>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <!-- Directory Content View -->

            <Grid Grid.Column="1"
                  Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Files List -->

                <ListBox Grid.Row="0"
                         Grid.IsSharedSizeScope="True"
                         DataContext="{Binding ElementName=DirTreeView, Path=SelectedItem}"
                         d:DataContext="{d:DesignInstance local:ArchiveDirectoryViewModel}"
                         ItemsSource="{Binding Path=Files, Mode=OneTime}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Padding="5">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <Grid>
                                        <ItemsControl ItemsSource="{Binding Path=FileDisplayInfo, Mode=OneTime}"
                                                      Grid.IsSharedSizeScope="True">

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="local:DuoGridItem">
                                                    <local:DuoGridItem Text="{Binding Path=Text}"
                                                                       Header="{Binding Path=Header}"
                                                                       MinUserLevel="{Binding Path=MinUserLevel}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>

                                        </ItemsControl>
                                    </Grid>
                                </Setter.Value>
                            </Setter>
                            <EventSetter Event="ToolTipOpening" Handler="EventSetter_OnHandler" />
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu ResxExtension.DefaultResxName="{StaticResource ResourcePath}"
                                                 d:DataContext="{d:DesignInstance local:ArchiveFileViewModel}">

                                        <local:MenuItemIcon Header="{Resx Archive_Export}"
                                                            IsEnabled="{Binding Path=IsInitialized}"
                                                            IconKind="FileExportOutline"
                                                            ItemsSource="{Binding Path=FileExports}">
                                            <local:MenuItemIcon.ItemContainerStyle>
                                                <Style TargetType="{x:Type MenuItem}">
                                                    <Setter Property="Command" Value="{Binding Path=ExportCommand}"/>
                                                    <Setter Property="Header" Value="{Binding Path=DisplayName, Mode=OneTime}"/>
                                                </Style>
                                            </local:MenuItemIcon.ItemContainerStyle>
                                        </local:MenuItemIcon>

                                        <local:MenuItemIcon Header="{Resx Archive_Import}"
                                                            IsEnabled="{Binding Path=IsInitialized}"
                                                            Command="{Binding Path=ImportCommand}"
                                                            IconKind="FileImportOutline" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="local:ArchiveFileViewModel">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" SharedSizeGroup="FileName" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0"
                                      Width="64"
                                      Height="64">

                                    <mah:Badged Padding="-5" 
                                                Margin="5">
                                        <mah:Badged.Style>
                                            <Style TargetType="{x:Type mah:Badged}" BasedOn="{StaticResource {x:Type controlzex:BadgedEx}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=HasPendingImport}" Value="True">
                                                        <DataTrigger.Setters>
                                                            <Setter Property="Badge" Value="{iconPacks:Material Kind=FileUploadOutline}" />
                                                        </DataTrigger.Setters>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </mah:Badged.Style>
                                        <Grid>

                                            <Image Source="{Binding Path=ThumbnailSource}"
                                                   HorizontalAlignment="Center"
                                                   Width="64"
                                                   Height="64" />

                                            <iconPacks:PackIconMaterial Kind="{Binding Path=IconKind}"
                                                                        HorizontalAlignment="Center"
                                                                        Visibility="{Binding Path=ThumbnailSource, Converter={rwpf:ObjectNullToVisibilityConverter}}"
                                                                        Width="48"
                                                                        Height="48" />

                                        </Grid>
                                    </mah:Badged>
                                </Grid>

                                <TextBlock Grid.Row="2"
                                           Width="70"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Text="{Binding Path=FileName}"
                                           TextWrapping="Wrap" />

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>


                </ListBox>

                <!-- Status -->

                <Separator Grid.Row="1"
                           Visibility="{Binding Path=DisplayStatus, Converter={rwpf:StringEmptyToVisibilityConverter}}" />

                <TextBlock Grid.Row="2"
                           Text="{Binding Path=DisplayStatus}" />

            </Grid>

            <!-- Messages -->

            <ItemsControl Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          ItemsSource="{Binding Path=Archives, Mode=OneTime}">

                <ItemsControl.ItemTemplate>

                    <DataTemplate>

                        <Border BorderThickness="1" 
                                BorderBrush="{DynamicResource MahApps.Brushes.Control.Border}"
                                Padding="10 7"
                                Margin="0 0 0 2"
                                Visibility="{Binding Path=HasModifiedFiles, Converter={rwpf:BooleanToVisibilityConverter}}">
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Path=ModifiedFilesDisplayText}" />

                                <!-- TODO-UPDATE: Localize -->

                                <Button Grid.Column="1"
                                        Content="Save Archive" />

                            </Grid>

                        </Border>

                    </DataTemplate>

                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </Grid>

    </local:LoaderContentControl>
</UserControl>