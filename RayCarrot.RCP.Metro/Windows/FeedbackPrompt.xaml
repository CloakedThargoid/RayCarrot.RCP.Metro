<local:BaseWindow x:Class="RayCarrot.RCP.Metro.FeedbackPrompt"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                  mc:Ignorable="d"
                  Title="{Resx Feedback_Title}"
                  Height="350" Width="600"
                  Closing="FeedbackPrompt_OnClosing"
                  ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="20"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Resx Feedback_Text}"
                       TextWrapping="WrapWithOverflow"
                       FontSize="18" />

            <Image Grid.Column="1"
                   Margin="10 0 0 0"
                   Source="../Img/Rayman Control Panel Icon.ico"
                   Width="128"
                   Height="128"/>

        </Grid>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center">

            <CheckBox x:Name="DoNotShowAgain" 
                      Content="{Resx Feedback_DoNotShowAgain}"
                      Margin="5"
                      HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="5">

                <Button Content="{Resx Feedback_Ignore}"
                        MinWidth="100"
                        Margin="5" 
                        Click="ButtonIgnore_Click"/>
                
                <Button Content="{Resx Feedback_GiveFeedback}" 
                        MinWidth="100"
                        Margin="5"
                        Click="ButtonSurvey_Click"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</local:BaseWindow>