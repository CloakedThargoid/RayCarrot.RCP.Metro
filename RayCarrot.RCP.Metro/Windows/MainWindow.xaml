<local:BaseWindow x:Class="RayCarrot.RCP.Metro.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                  xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                  xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
                  ResxExtension.DefaultResxName="{x:Static local:AppLanguages.ResourcePath}"
                  Language="{UICulture}"
                  Title="{Resx AppName}"
                  Height="600"
                  Width="800">
    <metro:MetroAnimatedTabControl Padding="5"
                                   metro:TabControlHelper.Transition="{Binding Source={x:Static local:RCFRCP.Data}, Path=EnableAnimations, Converter={local:BooleanToTransitionTypeConverter}}">

        <TabItem Header="Games">
            <local:GamesPage x:Name="GamesPage" />
        </TabItem>

        <TabItem x:Name="BackupPageTab"
                 Header="Backup/Restore">
            <local:BackupPage />
        </TabItem>

        <TabItem Header="Settings">
            <local:SettingsPage />
        </TabItem>

        <TabItem Header="Help">
            <local:HelpPage />
        </TabItem>

        <TabItem Header="About">
            <local:AboutPage />
        </TabItem>

        <TabItem Header="Debug"
                 rwpf:UserLevelTag.MinUserLevel="Debug">
            <local:DebugPage />
        </TabItem>

    </metro:MetroAnimatedTabControl>
</local:BaseWindow>