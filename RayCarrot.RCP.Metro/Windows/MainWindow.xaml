<local:BaseWindow x:Class="RayCarrot.RCP.Metro.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                  xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                  xmlns:rwpf="clr-namespace:RayCarrot.WPF;assembly=RayCarrot.WPF"
                  Title="Rayman Control Panel"
                  Height="600"
                  Width="800"
                  Closing="MainWindow_OnClosingAsync">
    <Window.Resources>
        <local:DebugPageViewModel x:Key="VM" />
    </Window.Resources>
    <metro:MetroAnimatedTabControl Padding="5" DataContext="{Binding Source={StaticResource VM}}">

        <TabItem Header="Games">
            <local:GamesPage x:Name="GamesPage" />
        </TabItem>

        <TabItem Header="Backup/Restore">
            <local:BackupPage x:Name="BackupPage" />
        </TabItem>

        <TabItem Header="Settings">
            <local:SettingsPage />
        </TabItem>

        <TabItem Header="Help">
            <local:HelpPage />
        </TabItem>

        <TabItem Header="About">
            <local:AboutPage />
        </TabItem>

        <TabItem Header="Debug"
                 rwpf:UserLevelTag.MinUserLevel="Debug">
            <local:DebugPage />
        </TabItem>

    </metro:MetroAnimatedTabControl>
</local:BaseWindow>