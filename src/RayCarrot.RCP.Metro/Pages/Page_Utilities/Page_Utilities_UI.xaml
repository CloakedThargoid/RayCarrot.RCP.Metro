<local:BasePage x:Class="RayCarrot.RCP.Metro.Page_Utilities_UI"
                x:TypeArguments="local:Page_Utilities_ViewModel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
                Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                mc:Ignorable="d"
                d:DesignHeight="450" d:DesignWidth="800"
                d:DataContext="{d:DesignInstance local:Page_Utilities_ViewModel}">

    <mah:MetroAnimatedTabControl x:Name="UtilitiesTabControl"
                                 Margin="15"
                                 FocusVisualStyle="{x:Null}">

        <i:Interaction.Behaviors>
            <local:FocusElementOnLoad />
        </i:Interaction.Behaviors>

        <!-- Archive Explorer -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_ArchiveExplorer}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.ArchiveExplorer}"
                 Header="{Resx Utilities_ArchiveExplorer_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=ArchiveExplorerViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- Serializers -->

        <!-- TODO-UPDATE: Localize -->
        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Serializers}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="Serializers">

            <local:Utility_Serializers_UI DataContext="{Binding Path=SerializersViewModel}" />

        </TabItem>

        <!-- Converters -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Converters}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Converter_Header}">

            <local:Utility_Converters_UI DataContext="{Binding Path=ConvertersViewModel}"
                                         VerticalAlignment="Top" />

        </TabItem>

        <!-- Decoders -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Decoders}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Decoder_Header}">

            <local:Utility_Decoders_UI DataContext="{Binding Path=DecodersViewModel}"
                                       VerticalAlignment="Top"/>

        </TabItem>

        <!-- Other -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Other}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Other_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=OtherViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- External Tools -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_ExternalTools}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_ExternalTools_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=ExternalToolViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

    </mah:MetroAnimatedTabControl>

    <i:Interaction.Behaviors>
        <local:SubTabControlBehavior ChildTabControl="{Binding ElementName=UtilitiesTabControl}" />
    </i:Interaction.Behaviors>

</local:BasePage>