<local:BasePage x:Class="RayCarrot.RCP.Metro.Page_Utilities_UI"
                x:TypeArguments="local:Page_Utilities_ViewModel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
                Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                mc:Ignorable="d"
                d:DesignHeight="450" d:DesignWidth="800"
                d:DataContext="{d:DesignInstance local:Page_Utilities_ViewModel}">

    <mah:MetroAnimatedTabControl x:Name="UtilitiesTabControl"
                                 Margin="15"
                                 FocusVisualStyle="{x:Null}">

        <i:Interaction.Behaviors>
            <local:FocusElementOnLoad />
        </i:Interaction.Behaviors>

        <!-- Archive Explorer -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_ArchiveExplorer}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.ArchiveExplorer}"
                 Header="{Resx Utilities_ArchiveExplorer_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=ArchiveExplorerViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- Serializers -->

        <!-- TODO-UPDATE: Localize -->
        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Serializers}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 DataContext="{Binding Path=SerializersViewModel}"
                 Header="Serializers">

            <Grid Margin="0 8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" MinWidth="60" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              Margin="0 0 10 0"
                              ItemsSource="{Binding Path=Types, Mode=OneTime}" 
                              SelectedItem="{Binding Path=SelectedType}"
                              DisplayMemberPath="Name.Value" />

                    <ComboBox Grid.Column="1"
                              DataContext="{Binding Path=SelectedType}"
                              ItemsSource="{Binding Path=Modes, Mode=OneTime}" 
                              SelectedItem="{Binding Path=SelectedMode}"
                              DisplayMemberPath="Name.Value"
                              Margin="0 0 10 0" />

                    <!-- TODO-UPDATE: Localize -->
                    <Button Grid.Column="2"
                            Margin="0 0 10 0"
                            Content="Log"
                            Command="{Binding Path=LogCommand, Mode=OneTime}" />

                    <!-- TODO-UPDATE: Localize -->
                    <Button Grid.Column="3"
                            Margin="0 0 10 0"
                            Content="Deserialize to JSON"
                            Command="{Binding Path=DeserializeCommand, Mode=OneTime}" />

                    <!-- TODO-UPDATE: Localize -->
                    <Button Grid.Column="4"
                            Content="Serialize from JSON"
                            Command="{Binding Path=SerializeCommand, Mode=OneTime}"  />

                </Grid>

                <TextBox Grid.Row="2"
                         Visibility="{Binding Path=Log, Converter={local:InvertedObjectNullToVisibilityConverter}}"
                         IsReadOnly="True"
                         Text="{Binding Path=Log}"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="{StaticResource Font.Consolas}"
                         FontSize="14"/>

            </Grid>

        </TabItem>

        <!-- Converters -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Converters}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Converter_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=ConverterViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- Decoders -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Decoders}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Decoder_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=DecoderViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- Other -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_Other}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_Other_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=OtherViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

        <!-- External Tools -->

        <TabItem local:TabItemAssist.IconKind="{StaticResource Icons.Utilities_ExternalTools}"
                 local:TabItemAssist.IconForeground="{StaticResource Colors.Utilities}"
                 Header="{Resx Utilities_ExternalTools_Header}">

            <ScrollViewer>
                <local:UtilitiesContainer Utilities="{Binding Path=ExternalToolViewModels, Mode=OneTime}" />
            </ScrollViewer>

        </TabItem>

    </mah:MetroAnimatedTabControl>

    <i:Interaction.Behaviors>
        <local:SubTabControlBehavior ChildTabControl="{Binding ElementName=UtilitiesTabControl}" />
    </i:Interaction.Behaviors>

</local:BasePage>