<local:WindowContentControl x:Class="RayCarrot.RCP.Metro.EmulatorsSetupDialog"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                            ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
                            Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                            d:DesignWidth="800" d:DesignHeight="600"
                            mc:Ignorable="d"
                            d:DataContext="{d:DesignInstance local:EmulatorsSetupViewModel}">

    <!-- TODO-UPDATE: Localize -->
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <local:Card Grid.Row="0"
                        Margin="{StaticResource RCP.Thicknesses.Card}">
                <!-- TODO: Allow click outside listbox to deselect -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Added emulators"
                               Style="{StaticResource RCP.Styles.TextBlock.Header}"
                               Margin="0 0 0 4" />

                    <!-- TODO-14: Allow reorder -->
                    <ListBox Grid.Row="1"
                             Background="Transparent"
                             ItemsSource="{Binding Path=InstalledEmulators, Mode=OneTime}"
                             d:ItemsSource="{d:SampleData ItemCount=3}"
                             SelectedItem="{Binding Path=SelectedEmulator}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource MahApps.Styles.ListBoxItemV3}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="mah:ControlsHelper.CornerRadius" Value="{StaticResource CornerRadius.Default}" />
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0"
                                           Width="32"
                                           Source="{Binding Path=Icon, Mode=OneTime, Converter={local:AssetEnumToImageSourceConverter}}"
                                           d:Source="{x:Static local:DesignData.EmulatorIconSource}"
                                           Margin="0 0 4 0" />
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Path=DisplayName.Value}"
                                               d:Text="DOSBox"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center" />

                                    <ItemsControl Grid.Column="2"
                                                  ItemsSource="{Binding Path=Platforms, Mode=OneTime}"
                                                  VerticalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding Path=Icon, Mode=OneTime, Converter={local:AssetEnumToImageSourceConverter}}"
                                                       d:Source="{local:AssetImageSource Asset={x:Static local:GamePlatformIconAsset.MsDos}}"
                                                       ToolTip="{Binding Path=DisplayName.Value}"
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0 0 4 0" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>

            </local:Card>

            <local:Card Grid.Row="1"
                        Margin="{StaticResource RCP.Thicknesses.Card}">
                <StackPanel>
                    <TextBlock Text="Available emulators"
                               Style="{StaticResource RCP.Styles.TextBlock.Header}"
                               Margin="0 0 0 4" />

                    <ItemsControl ItemsSource="{Binding Path=AvailableEmulators, Mode=OneTime}"
                                  d:ItemsSource="{d:SampleData ItemCount=3}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 0 0 4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0"
                                           Margin="0 0 4 0"
                                           Width="32"
                                           Source="{Binding Path=Icon, Mode=OneTime, Converter={local:AssetEnumToImageSourceConverter}}"
                                           d:Source="{x:Static local:DesignData.EmulatorIconSource}"/>

                                    <TextBlock Grid.Column="1"
                                               Margin="0 0 4 0"
                                               Text="{Binding Path=DisplayName.Value}" 
                                               d:Text="DOSBox"
                                               VerticalAlignment="Center" />

                                    <Button Grid.Column="2"
                                            Style="{StaticResource RCP.Styles.Button.Flat}"
                                            Margin="0 0 4 0"
                                            HorizontalAlignment="Right"
                                            Content="Locate"
                                            local:IconAssist.IconKind="FolderOutline"
                                            Command="{Binding Path=AddEmulatorCommand, Mode=OneTime}"
                                            CommandParameter="{Binding Mode=OneTime}" />

                                    <ItemsControl Grid.Column="3"
                                                  ItemsSource="{Binding Path=Platforms, Mode=OneTime}"
                                                  VerticalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding Path=Icon, Mode=OneTime, Converter={local:AssetEnumToImageSourceConverter}}"
                                                       d:Source="{local:AssetImageSource Asset={x:Static local:GamePlatformIconAsset.MsDos}}"
                                                       ToolTip="{Binding Path=DisplayName.Value}"
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0 0 4 0" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </local:Card>
        </Grid>


        <local:Card Grid.Column="1"
                    Margin="{StaticResource RCP.Thicknesses.Card}"
                    DataContext="{Binding Path=SelectedEmulator}">
            <!-- TODO-14: Create an actual UI here with options and info -->
            <StackPanel>
                <Button Style="{StaticResource RCP.Styles.Button.Flat}"
                        Content="Remove"
                        Command="{Binding Path=RemoveEmulatorCommand, Mode=OneTime}" />
            </StackPanel>
        </local:Card>

    </Grid>
    

</local:WindowContentControl>