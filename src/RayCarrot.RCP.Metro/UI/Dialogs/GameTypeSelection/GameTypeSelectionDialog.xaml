<local:WindowContentControl x:Class="RayCarrot.RCP.Metro.GameTypeSelectionDialog"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                            ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
                            Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                            MinWidth="150" MinHeight="100"
                            mc:Ignorable="d"
                            d:DataContext="{d:DesignInstance local:GameTypeSelectionViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="125" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">

            <i:Interaction.Behaviors>
                <local:UnifiedMarginBehavior Margin="{StaticResource Thickness.Horizontal}" />
            </i:Interaction.Behaviors>

            <!-- Win32 -->

            <local:RadioButtonExtended Content="{Resx GameType_Desktop}"
                                      IsChecked="{Binding Path=SelectedType, Converter={local:EnumBooleanConverter}, ConverterParameter=Win32}"
                                      Visibility="{Binding Path=AllowWin32, Converter={local:BooleanToVisibilityConverter}}"/>

            <!-- Steam -->

            <local:RadioButtonExtended Content="{Resx GameType_Steam}"
                                      IsChecked="{Binding Path=SelectedType, Converter={local:EnumBooleanConverter}, ConverterParameter=Steam}"
                                      Visibility="{Binding Path=AllowSteam, Converter={local:BooleanToVisibilityConverter}}" />
            
            <!-- WinStore -->

            <local:RadioButtonExtended Content="{Resx GameType_WinStore}"
                                      IsChecked="{Binding Path=SelectedType, Converter={local:EnumBooleanConverter}, ConverterParameter=WinStore}"
                                      Visibility="{Binding Path=AllowWinStore, Converter={local:BooleanToVisibilityConverter}}" />
            
            <!-- DosBox -->

            <local:RadioButtonExtended Content="{Resx GameType_DosBox}"
                                      IsChecked="{Binding Path=SelectedType, Converter={local:EnumBooleanConverter}, ConverterParameter=DosBox}"
                                      Visibility="{Binding Path=AllowDosBox, Converter={local:BooleanToVisibilityConverter}}" />

            <!-- Educational DosBox -->

            <local:RadioButtonExtended Content="{Resx GameType_EducationalDosBox}"
                                      IsChecked="{Binding Path=SelectedType, Converter={local:EnumBooleanConverter}, ConverterParameter=EducationalDosBox}"
                                      Visibility="{Binding Path=AllowEducationalDosBox, Converter={local:BooleanToVisibilityConverter}}" />

        </WrapPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button Content="{Resx Cancel}"
                    IsCancel="True"
                    Click="CancelButton_Click"/>

            <Button Content="{Resx Accept}"
                    Margin="10 0 0 0"
                    IsDefault="True"
                    Click="OKButton_Click"/>

        </StackPanel>

    </Grid>
</local:WindowContentControl>