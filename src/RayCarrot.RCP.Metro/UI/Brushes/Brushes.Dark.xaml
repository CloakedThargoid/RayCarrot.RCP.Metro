<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Colors/Colors.MaterialDesign.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Normal theme background is #252525 -->
    <SolidColorBrush x:Key="RCP.Brushes.Card.Background">#303030</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.ListBoxItem.FlatHover">#393939</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.ListBoxItem.FlatSelected">#404040</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.Card.SecondaryBackground">#404040</SolidColorBrush>

    <!-- Flat button (use darker colors here since the foreground is white) -->
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.ArchiveExplorer" Color="{StaticResource RCP.Colors.OrangePrimary800}" />
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.Patcher" Color="{StaticResource RCP.Colors.DeepOrangePrimary800}" />
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.Play" Color="{StaticResource RCP.Colors.GreenPrimary700}" />

</ResourceDictionary>