<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Colors/Colors.MaterialDesign.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Normal theme background is #FFFFFF -->
    <SolidColorBrush x:Key="RCP.Brushes.Card.Background">#ECECEC</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.ListBoxItem.FlatHover">#E0E0E0</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.ListBoxItem.FlatSelected">#D8D8D8</SolidColorBrush>
    <SolidColorBrush x:Key="RCP.Brushes.Card.SecondaryBackground">#D8D8D8</SolidColorBrush>

    <!-- Flat button -->
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.ArchiveExplorer" Color="{StaticResource RCP.Colors.OrangePrimary500}" />
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.Patcher" Color="{StaticResource RCP.Colors.DeepOrangePrimary500}" />
    <SolidColorBrush x:Key="RCP.Brushes.FlatButton.Play" Color="{StaticResource RCP.Colors.GreenPrimary500}" />

</ResourceDictionary>