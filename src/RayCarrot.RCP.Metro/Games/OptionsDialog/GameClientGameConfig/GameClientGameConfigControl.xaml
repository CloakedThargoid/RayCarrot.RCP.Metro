<UserControl x:Class="RayCarrot.RCP.Metro.Games.OptionsDialog.GameClientGameConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rcp="clr-namespace:RayCarrot.RCP.Metro"
             xmlns:optionsDialog="clr-namespace:RayCarrot.RCP.Metro.Games.OptionsDialog"
             xmlns:dosBox="clr-namespace:RayCarrot.RCP.Metro.Games.Clients.DosBox"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             ResxExtension.DefaultResxName="{x:Static rcp:LocalizationManager.ResourcePath}"
             IsTabStop="False"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DataContext="{d:DesignInstance optionsDialog:GameClientGameConfigPageViewModel}">
    <!-- TODO-UPDATE: Localize -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="12 0 12 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding Path=GameClients}"
                      d:ItemsSource="{d:SampleData ItemCount=3}"
                      SelectedItem="{Binding Path=SelectedGameClient}"
                      d:SelectedIndex="0"
                      Margin="0 0 8 0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Width="16"
                                   Source="{Binding Path=Icon, Mode=OneTime, Converter={rcp:AssetEnumToImageSourceConverter}}"
                                   d:Source="{x:Static rcp:DesignData.GameClientIconSource}"
                                   Margin="0 0 4 0" />

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Path=DisplayName.Value}"
                                       d:Text="DOSBox"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />

                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Grid.Column="1"
                    Command="{Binding Path=ConfigureGameClientsCommand, Mode=OneTime}"
                    Content="Configure"
                    Style="{StaticResource RCP.Styles.Button.IconContent}"
                    rcp:IconAssist.IconKind="{StaticResource RCP.Icons.GameClientEdit}" />

        </Grid>

        <Separator Grid.Row="1"
                   Margin="12 0"
                   Visibility="{Binding Path=GameClientGameConfig, Converter={rcp:InvertedObjectNullToVisibilityConverter}}" />

        <ScrollViewer Grid.Row="2">
            <b:Interaction.Behaviors>
                <rcp:FocusScrollViewerOnLoad />
            </b:Interaction.Behaviors>

            <ContentPresenter Margin="12 0"
                              Content="{Binding Path=GameClientGameConfig}">
                <ContentPresenter.Resources>
                    <DataTemplate DataType="{x:Type dosBox:DosBoxGameConfigViewModel}">
                        <dosBox:DosBoxGameConfigControl />
                    </DataTemplate>
                </ContentPresenter.Resources>
            </ContentPresenter>

        </ScrollViewer>

    </Grid>
</UserControl>