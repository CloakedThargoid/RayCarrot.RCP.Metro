<local:WindowContentControl x:Class="RayCarrot.RCP.Metro.Games.Tools.RuntimeModifications.RuntimeModificationsDialog"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
                            xmlns:runtimeModifications="clr-namespace:RayCarrot.RCP.Metro.Games.Tools.RuntimeModifications"
                            Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                            ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
                            mc:Ignorable="d" 
                            d:DesignWidth="800" d:DesignHeight="500" 
                            d:DataContext="{d:DesignInstance runtimeModifications:RuntimeModificationsViewModel}"
                            Focusable="True"
                            FocusVisualStyle="{x:Null}"
                            MouseDown="UserControl_OnMouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 10">

                <TextBlock Style="{StaticResource RCP.Styles.TextBlock.HeaderLarge}"
                           Text="{Resx Mod_Mem_ProcessHeader}"/>

                <local:InfoIcon Text="{Resx Mod_Mem_ProcessInfo}" />

            </StackPanel>

            <local:ProcessAttacher DataContext="{Binding Path=ProcessAttacherViewModel, Mode=OneTime}" />

            <Grid HorizontalAlignment="Left"
                  Visibility="{Binding Path=ProcessAttacherViewModel.IsAttached, Converter={local:InvertedBooleanToVisibilityConverter}}">
                <Grid.Resources>
                    <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                           Text="{Resx Mod_Mem_GameSelection}"
                           VerticalAlignment="Center"
                           Margin="0 0 10 0"/>

                <ComboBox Grid.Column="1" Grid.Row="0"
                          MinWidth="200"
                          ItemsSource="{Binding Path=GameVersions, Mode=OneTime}"
                          DisplayMemberPath="DisplayName.Value"
                          SelectedItem="{Binding Path=SelectedGameVersion}"/>

                <TextBlock Grid.Column="0" Grid.Row="2"
                           Text="{Resx Mod_Mem_EmuSelection}"
                           VerticalAlignment="Center"
                           Margin="0 0 10 0"/>

                <ComboBox Grid.Column="1" Grid.Row="2"
                          ItemsSource="{Binding Path=EmulatorVersions}"
                          DisplayMemberPath="DisplayName.Value"
                          SelectedItem="{Binding Path=SelectedEmulatorVersion}"/>

            </Grid>
        </StackPanel>

        <runtimeModifications:RunningGameControl Grid.Row="1"
                                                 DataContext="{Binding Path=RunningGameViewModel}"
                                                 Visibility="{Binding Converter={local:InvertedObjectNullToVisibilityConverter}}"/>
    </Grid>

</local:WindowContentControl>