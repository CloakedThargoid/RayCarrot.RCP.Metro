<UserControl x:Class="RayCarrot.RCP.Metro.Patcher.PatchCreatorChangelogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             xmlns:patcher="clr-namespace:RayCarrot.RCP.Metro.Patcher"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignWidth="800" d:DesignHeight="600"
             d:Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
             d:Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
             d:DataContext="{d:DesignInstance patcher:PatchCreatorViewModel}"
             Language="{UICulture}"
             ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <ItemsControl x:Name="ChangelogEntriesItemControl" 
                          ItemsSource="{Binding Path=ChangelogEntries, Mode=OneTime}"
                          d:ItemsSource="{d:SampleData ItemCount=3}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="Transparent">

                            <Separator Margin="0 0 0 10"
                                       Visibility="{Binding Path=HasPreviousEntry, Converter={local:BooleanToVisibilityConverter}}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Margin="0 0 15 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- TODO-UPDATE: Localize -->
                                    <TextBlock Grid.Column="0"
                                               Grid.Row="0"
                                               Text="Version"
                                               Style="{StaticResource RCP.Styles.TextBlock.HeaderSmall}"
                                               Margin="0 0 0 10"
                                               VerticalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="2"
                                                Grid.Row="0"
                                                Margin="0 0 0 10">
                                        <mah:NumericUpDown MinWidth="0" Margin="0 0 3 0" Value="{Binding Path=Version_Major}" />
                                        <TextBlock Text="." VerticalAlignment="Bottom"  Margin="0 0 3 0"/>
                                        <mah:NumericUpDown MinWidth="0" Margin="0 0 3 0" Value="{Binding Path=Version_Minor}" />
                                        <TextBlock Text="." VerticalAlignment="Bottom"  Margin="0 0 3 0"/>
                                        <mah:NumericUpDown  MinWidth="0"  Value="{Binding Path=Version_Revision}" />
                                    </StackPanel>

                                    <!-- TODO-UPDATE: Localize -->
                                    <TextBlock Grid.Column="0"
                                               Grid.Row="1"
                                               Text="Date"
                                               Style="{StaticResource RCP.Styles.TextBlock.HeaderSmall}"
                                               Margin="0 0 0 10"
                                               VerticalAlignment="Center" />
                                    <!-- TODO-UPDATE: Localize -->
                                    <DatePicker Grid.Column="2" 
                                                Grid.Row="1"
                                                SelectedDateFormat="Long"
                                                mah:TextBoxHelper.Watermark="Select a date"
                                                SelectedDate="{Binding Path=Date}"
                                                Margin="0 0 0 10" />

                                    <!-- TODO-UPDATE: Localize -->
                                    <TextBlock Grid.Column="0"
                                               Grid.Row="2"
                                               Text="Description"
                                               Style="{StaticResource RCP.Styles.TextBlock.HeaderSmall}"
                                               Margin="0 0 0 10"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="2"
                                             Grid.Row="2"
                                             Text="{Binding Path=Description}"
                                             MinHeight="100"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MaxLength="700"
                                             MaxLines="10"
                                             Margin="0 0 0 10" />

                                </Grid>

                                <!-- TODO-UPDATE: Localize -->
                                <Button Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource RCP.Styles.Button.IconCircleSmall}"
                                        local:Icon.Kind="DeleteOutline"
                                        Command="{Binding Path=DataContext.RemoveChangelogEntryCommand, ElementName=ChangelogEntriesItemControl, Mode=OneTime}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Remove changelog entry" />

                            </Grid>

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>

        <!-- TODO-UPDATE: Localize -->
        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                Style="{StaticResource RCP.Styles.Button.IconCircleSmall}"
                local:Icon.Kind="Plus"
                Command="{Binding Path=AddChangelogEntryCommand, Mode=OneTime}"
                ToolTip="Add changelog entry" />

    </Grid>
</UserControl>