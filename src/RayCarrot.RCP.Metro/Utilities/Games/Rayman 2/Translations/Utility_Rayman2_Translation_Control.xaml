<UserControl x:Class="RayCarrot.RCP.Metro.Utility_Rayman2_Translation_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Interactions="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:RayCarrot.RCP.Metro"
             ResxExtension.DefaultResxName="{x:Static local:LocalizationManager.ResourcePath}"
             mc:Ignorable="d"
             d:DesignWidth="550" d:DataContext="{d:DesignInstance local:Utility_Rayman2_Translation_ViewModel}">
    <StackPanel>
        <Interactions:Interaction.Behaviors>
            <local:UnifiedMarginBehavior Margin="{StaticResource RCP.Thicknesses.Vertical}" />
        </Interactions:Interaction.Behaviors>

        <ComboBox SelectedIndex="{Binding Path=SelectedTranslation, Converter={local:EnumToIntConverter}}"
                  HorizontalAlignment="Left"
                  MinWidth="110">
            <TextBlock Text="{Resx R2U_Translations_Original}" />
            <TextBlock Text="{Resx R2U_Translations_Irish}" />
            <TextBlock Text="{Resx R2U_Translations_Swedish}" />
            <TextBlock Text="{Resx R2U_Translations_Portuguese}" />
            <TextBlock Text="{Resx R2U_Translations_Slovak}" />
        </ComboBox>

        <TextBlock Text="{Resx R2U_Translations_IrishInfo}"
                   Visibility="{Binding Path=SelectedTranslation, Converter={local:EnumVisibilityConverter}, ConverterParameter=Irish}"
                   TextWrapping="WrapWithOverflow" />

        <TextBlock Text="{Resx R2U_Translations_SwedishInfo}"
                       Visibility="{Binding Path=SelectedTranslation, Converter={local:EnumVisibilityConverter}, ConverterParameter=Swedish}"
                       TextWrapping="WrapWithOverflow" />

        <TextBlock Text="{Resx R2U_Translations_PortugueseInfo}"
                   Visibility="{Binding Path=SelectedTranslation, Converter={local:EnumVisibilityConverter}, ConverterParameter=Portuguese}"
                   TextWrapping="WrapWithOverflow" />

        <TextBlock Text="{Resx R2U_Translations_SlovakInfo}"
                   Visibility="{Binding Path=SelectedTranslation, Converter={local:EnumVisibilityConverter}, ConverterParameter=Slovak}"
                   TextWrapping="WrapWithOverflow" />

        <Button Content="{Resx Utility_Apply}"
                HorizontalAlignment="Left"
                Command="{Binding Path=ApplyTranslationCommand}"/>

    </StackPanel>
</UserControl>